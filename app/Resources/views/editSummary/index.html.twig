{% extends 'base.html.twig' %}
{% import 'macros/forms.html.twig' as forms %}

{% block body %}
    <form class="col-lg-8 col-lg-offset-2" action="{{ path('EditSummary') }}" method="get" accept-charset="utf-8">
        <p class="text-danger" style="padding-bottom: 20px;">
            {{ msg('edit-summaries-missing', ['<a target="_blank" href="https://phabricator.wikimedia.org/T189234">T189234</a>']) }}
        </p>

        <fieldset class="form-fieldset">
            {{ forms.wiki_input(project) }}
            {{ forms.user_input(true, false, project) }}
            {{ forms.namespace_select(project, true, namespace) }}
        </fieldset>
        {{ forms.submit_btn() }}
    </form>
{% endblock %}
